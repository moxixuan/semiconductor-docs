# ============================================================================
# 环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ============================================================================

# ----------------------------------------------------------------------------
# Meilisearch 配置
# ----------------------------------------------------------------------------
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your-api-key
MEILISEARCH_MASTER_KEY=your-master-key

# ----------------------------------------------------------------------------
# OCR 配置
# ----------------------------------------------------------------------------
TESSERACT_LANGUAGES=chi_sim,eng
OCR_WORKERS=4
OCR_THRESHOLD=0.3

# ----------------------------------------------------------------------------
# 文件路径配置
# ----------------------------------------------------------------------------
DATA_ROOT=/home/moxixuan/semiconductor-docs/data
PDF_INPUT_DIR=/home/moxixuan/semiconductor-docs/data/pdfs/raw
MARKDOWN_OUTPUT_DIR=/home/moxixuan/semiconductor-docs/data/markdown/drafts
IMAGE_OUTPUT_DIR=/home/moxixuan/semiconductor-docs/data/images
METADATA_DIR=/home/moxixuan/semiconductor-docs/data/metadata

# ----------------------------------------------------------------------------
# 日志配置
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=/home/moxixuan/semiconductor-docs/data/processing.log

# ----------------------------------------------------------------------------
# MCP 服务器配置
# ----------------------------------------------------------------------------
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# ----------------------------------------------------------------------------
# 向量嵌入配置（用于语义搜索）
# ----------------------------------------------------------------------------
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ----------------------------------------------------------------------------
# PDF 处理配置
# ----------------------------------------------------------------------------
PDF_MAX_SIZE_MB=100
BATCH_CONCURRENCY=2
ENABLE_OCR=false
PRESERVE_FORMATTING=true

# ----------------------------------------------------------------------------
# GitHub Releases 配置
# ----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPOSITORY=moxixuan/semiconductor-docs
